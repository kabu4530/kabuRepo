<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="jp.satorukabuyama.coordinateapplv2.TopActivity">

    <ImageButton
        android:id="@+id/mypagePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/converse"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:text="kabu0543"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/myAccountBtn"
        android:layout_below="@+id/mypagePhoto"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textAllCaps="false" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton3" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/codebtn"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/myAccountBtn"
        android:layout_toStartOf="@+id/myAccountBtn"
        android:layout_marginBottom="71dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_brightness_low_black_24dp"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/myAccountBtn"
        android:layout_toEndOf="@+id/myAccountBtn" />

</RelativeLayout>